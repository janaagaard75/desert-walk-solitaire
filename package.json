{
  "name": "desert-walk",
  "version": "1.0.9",
  "description": "Solitaire card game for iOS and Android using React Native, Expo, MobX and TypeScript.",
  "author": {
    "email": "jan@aagaard.net",
    "name": "Jan Aagaard"
  },
  "private": true,
  "license": "MIT",
  "main": "expo/AppEntry.js",
  "jest": {
    "preset": "jest-expo-ts"
  },
  "scripts": {
    "build": "yarn run eas build",
    "check-lint": "eslint --format unix --max-warnings 0",
    "check-types": "tsc",
    "docs-clean": "rm -rf docs/_site",
    "docs-install": "(cd docs; bundle install)",
    "docs-start": "yarn run docs-clean && (cd docs; bundle exec jekyll serve --future --unpublished)",
    "docs-update": "(cd docs; bundle update)",
    "eas": "yarn dlx --package eas-cli --quiet eas",
    "start": "expo start",
    "update": "yarn run eas update"
  },
  "dependencies": {
    "@babel/core": "^7.26.0",
    "@babel/helper-validator-identifier": "^7.24.7",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-decorators": "^7.24.7",
    "@babel/preset-env": "^7.24.8",
    "@stylistic/eslint-plugin": "^5.1.0",
    "@types/babel__helper-validator-identifier": "^7.15.2",
    "@types/react": "~19.0.10",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "babel-preset-expo": "~13.0.0",
    "eslint": "^9.30.0",
    "eslint-formatter-unix": "^8.40.0",
    "eslint-plugin-filename-export": "^2.0.0",
    "eslint-plugin-perfectionist": "^4.15.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "6.0.0-rc.1",
    "eslint-plugin-react-hooks-extra": "^1.52.3",
    "eslint-plugin-react-native": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "expo": "^53.0.20",
    "expo-font": "~13.3.2",
    "expo-screen-orientation": "~8.1.7",
    "expo-splash-screen": "~0.30.10",
    "expo-updates": "~0.28.17",
    "mobx": "^6.13.7",
    "mobx-react": "^9.2.0",
    "prettier": "^3.6.2",
    "react": "19.0.0",
    "react-native": "0.79.5",
    "react-native-svg": "15.11.2",
    "tslib": "^2.6.3",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.31.1"
  },
  "packageManager": "yarn@4.9.2"
}
