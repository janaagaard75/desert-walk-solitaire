{
  "name": "desert-walk",
  "version": "1.0.9",
  "description": "Solitaire card game for iOS and Android using React Native, Expo, MobX and TypeScript.",
  "author": {
    "email": "jan@aagaard.net",
    "name": "Jan Aagaard"
  },
  "private": true,
  "license": "MIT",
  "main": "expo/AppEntry.js",
  "jest": {
    "preset": "jest-expo-ts"
  },
  "scripts": {
    "android": "expo start --android",
    "build-android": "eas build -p android",
    "build-ios-preview": "eas build -p ios --profile preview",
    "build-ios": "eas build -p ios",
    "check-types": "tsc",
    "docs-clean": "rm -rf docs/_site",
    "docs-install": "(cd docs; bundle install)",
    "docs-start": "yarn run docs-clean && (cd docs; bundle exec jekyll serve --future --unpublished)",
    "docs-update": "(cd docs; bundle update)",
    "ios": "expo start --ios",
    "lint": "eslint . --ext .ts,.tsx --format codeframe --max-warnings 0",
    "optimize-assets": "npx expo-optimize",
    "publish-to-expo": "expo publish",
    "start": "expo start",
    "validate": "yarn run lint && yarn run check-types",
    "web": "expo start --web"
  },
  "dependencies": {
    "expo": "^51.0.21",
    "expo-font": "~12.0.9",
    "expo-screen-orientation": "~7.0.5",
    "expo-splash-screen": "~0.27.5",
    "expo-updates": "~0.25.20",
    "mobx": "^6.13.1",
    "mobx-react": "^9.1.1",
    "react": "18.2.0",
    "react-native": "0.74.3",
    "react-native-svg": "15.2.0",
    "tslib": "^2.6.3"
  },
  "devDependencies": {
    "@babel/core": "^7.24.9",
    "@babel/helper-validator-identifier": "^7.24.7",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-decorators": "^7.24.7",
    "@babel/preset-env": "^7.24.8",
    "@types/babel__helper-validator-identifier": "^7.15.2",
    "@types/react": "~18.2.79",
    "@types/react-native": "~0.67.26",
    "@typescript-eslint/eslint-plugin": "^7.16.1",
    "@typescript-eslint/parser": "^7.16.1",
    "babel-preset-expo": "~11.0.12",
    "eas-cli": "^10.2.1",
    "eslint": "^8.57.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-formatter-codeframe": "^7.32.1",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-typescript-sort-keys": "^3.2.0",
    "prettier": "^3.3.3",
    "typescript": "^5.5.3"
  }
}
